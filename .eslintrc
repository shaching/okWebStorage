{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": 0,
        "comma-dangle": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "class-methods-use-this": [
            0
        ],
        "arrow-body-style": [
            "error",
            "always"
        ]
    }
}